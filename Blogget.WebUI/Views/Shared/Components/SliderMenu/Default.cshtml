
@model IEnumerable<Blog>





<div id="carouselExampleIndicators" class="carousel slide " data-ride="carousel">
    <ol class="carousel-indicators">

        <li data-target="#carouselExampleIndicators" data-slide-to="1" class="active"></li>
        @foreach (var item in Model)
        {
            <li data-target="#carouselExampleIndicators" data-slide-to="@item.BlogId"></li>
 
        }

    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100 h-250" src="~/img/1.jpg" alt="gürhanArslan slide">
            <div class="carousel-caption d-md-block">
                <h5> <a class="orange" asp-action="About" asp-controller="Home">Gürhan Arslan</a> </h5>
                <p>Gürhan ARSLAN</p>
            </div>
        </div>
        @foreach (var m in Model)
        {
            <div class="carousel-item">
                <img class="d-block w-100 h-250" src="~/img/@m.Image" alt="@m.Title slide">
                <div class="carousel-caption d-md-block">
                    <h5> <a class="orange"asp-action="Details" asp-controller="Blog" asp-route-id="@m.BlogId">@m.Title</a> </h5>
                    <p>@m.Date</p>
                </div>
            </div>
        }


    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>