@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<div class="container">
    <div class="row">
        @if(Model.Count() > 0) { 
        @foreach (var item in Model)
        {
            <div class="col-2 col-md-4 text-right ">

                <a asp-action="Uptade" asp-controller="Category" asp-route-id="@item.CategoryId" class="btn btn-primary mt-1">Uptade</a>


            </div>
            <div class="col-8 col-md-4 ">
                <div class="list-group">

                    <button type="button" class="list-group-item list-group-item-action"> @item.Name   </button>

                </div>




            </div>
            <div class="col-2 col-md-4 ">


                <a asp-action="Delete" asp-controller="Category" asp-route-id="@item.CategoryId" class="btn btn-danger mt-1">Delete</a>


            </div>
        }
            <div class="col-12 text-center">
                <a asp-action="Create" asp-controller="Category" class="btn btn-info mt-5 btn-lg">Create</a>

            </div>
        }
        else
        {
            <div class="col-12 text-center ">
                <div class="card text-center">
                    <div class="card-body border border-danger">
                        <p>    Herhangi bir Kategori Bulunmamaktadir. !! </p>

                        Hemen yeni bir kategori eklemek için <br /> <a asp-action="Create" asp-controller="Category" class="btn btn-primary">Tıklayınız</a>

                    </div>
                </div>
            </div>
        }
    </div>
</div>



