@model Blog
@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<div class="container">
    <div class="row">
        <div class="col-1 col-md-3 col-lg-4"></div>
        <div class="col-10 col-md-6 col-lg-4">

            <form asp-action="Create" method="post">

                <div>
                    <label asp-for="Title">Title</label>
                    <input asp-for="Title" class="form-control" />
                </div>

                <div>
                    <label asp-for="BlogHtml">HTML Name</label>
                    <input asp-for="BlogHtml" class="form-control" />
                </div>
                <div>
                    <label asp-for="Description">Description</label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                </div>
                <div>
                    <label asp-for="Body">Body</label>
                    <textarea asp-for="Body" class="form-control"></textarea>
                </div>

                <div>
                    <label asp-for="Image">Image</label>
                    <label asp-for="Image">Resim eklemek için Uptade kısmından "Onay verirken" ekleyiniz.</label>
                </div>
                <div>
                    <label asp-for="CategoryId">Category</label>
                    <select class="form-control" asp-for="CategoryId" asp-items="ViewBag.Categories">
                        <option disabled selected value="">Seçiniz</option>

                    </select>
                </div>


                <input type="submit" value="Create" class="btn btn-success mt-3" />



            </form>





        </div>
        <div class="col-1 col-md-3 col-lg-4"></div>
    </div>
</div>

